language = "nodejs"
entrypoint = "index.html"

run = "npm run dev -- --host"
modules = ["nodejs-20"]

[env]
VITE_HASH_ROUTER = "1"

[packager]
ignoredPackages = ["nodejs-22"]

[deployment]
build = ["npm", "run", "build"]
run = ["npm", "run", "preview", "--", "--port", "$PORT"]
deploymentTarget = "autoscale"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 45411998
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host"

[nix]
channel = "stable-25_05"
