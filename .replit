
modules = ["nodejs-20"]

entrypoint = "index.html"

run = "npm run dev -- --host"

[env]
VITE_HASH_ROUTER = "true"

[deployment]
build = ["npm", "run", "build"]
run = ["sh", "-c", "npm run start"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5173
externalPort = 80

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 45411998
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host"
