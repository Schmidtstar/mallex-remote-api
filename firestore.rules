rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Spieler-Collection: Jeder kann lesen/schreiben
    match /players/{playerId} {
      allow read, write: if true;
    }

    // Admin-Settings: Nur authentifizierte Nutzer
    match /admin/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Tasks: Lesen für alle, Schreiben für authentifizierte
    match /tasks/{taskId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Task-Suggestions: Alle können vorschlagen
    match /taskSuggestions/{suggestionId} {
      allow read, write: if true;
    }

    // Fallback: Deny all andere
    match /{document=**} {
      allow read, write: if false;
    }
  }
}