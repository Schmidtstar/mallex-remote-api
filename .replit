entrypoint = "index.js"
modules = ["nodejs-22", "postgresql-16"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"
packages = ["lsof"]

[deployment]
deploymentTarget = "static"
ignorePorts = false
publicDir = "dist"
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "npm run preview -- --host 0.0.0.0 --port 80"]

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[workflows]
runButton = "Dev Server (Fixed)"

[[workflows.workflow]]
name = "Dev Server (Optimized)"
author = 45411998
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Dev Server (Fixed)"
author = 45411998
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --port 5173 --host 0.0.0.0"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
