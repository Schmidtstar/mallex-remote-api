entrypoint = "index.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
deploymentTarget = "static"
ignorePorts = false
publicDir = "dist"
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "npm run preview"]

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = 45411998
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[ports]]
localPort = 443
externalPort = 3000

[[ports]]
localPort = 3000
externalPort = 80
