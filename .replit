language = "nodejs"
entrypoint = "index.html"

run = "npm run dev -- --host"
modules = ["nodejs-20"]

[env]
VITE_HASH_ROUTER = "1"
REPLIT_DISABLE_PACKAGE_LAYER = "1"
NIXPACKS_BUILD_CACHE = "false"
NPM_CONFIG_AUDIT = "false"

[packager]
ignoredPackages = ["nodejs-22"]

[deployment]
build = ["npm", "run", "build"]
run = ["sh", "-c", "npm run start"]
deploymentTarget = "autoscale"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 80

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 45411998
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host"

[nix]
channel = "stable-25_05"
